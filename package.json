{
  "name": "automated-cloud-advisor",
  "version": "0.0.0-development",
  "author": "ayyazakhtar1@gmail.com",
  "description": "Automated Cloud Advisor",
  "repository": {
    "type": "git",
    "url": "https://github.com/disneystreaming/automated-cloud-advisor.git"
  },
  "license": "Apache-2.0",
  "keywords": [
    "aws",
    "devops",
    "automation",
    "cloud"
  ],
  "directories": {
    "doc": "docs"
  },
  "files": [
    "src"
  ],
  "bin": "./src/install/index.js",
  "main": "src/index/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node src/install/index.js",
    "test": "jest"
  },
  "dependencies": {
    "inquirer": "^7.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "aws-sdk": "^2.673.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.10.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.0",
    "jest": "^26.0.1",
    "lint": "^0.7.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "parser": "babel-eslint",
    "plugins": [
      "jest",
      "react"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest/globals": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "react/jsx-uses-vars": "error",
      "react/jsx-uses-react": "error"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "silent": true,
    "collectCoverageFrom": [
      "src/lambda/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm t",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "master",
      "main"
    ],
    "plugins": [
      ["@semantic-release/commit-analyzer"],
      ["@semantic-release/release-notes-generator", {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          }
      }],
      ["@semantic-release/npm", {
        "tarballDir": "pack"
      }],
      ["@semantic-release/github", {
        "assets": "pack/*.tgz"
      }],
      ["@semantic-release/git", {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }]
    ]
  }
}
